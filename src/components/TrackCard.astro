---
interface Props {
  title: string;
  description: string;
  courses: number;
  duration: string;
  href: string;
}

const { title, description, courses, duration, href } = Astro.props;
---

<article class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow">
  <h3 class="text-2xl font-bold mb-3">{title}</h3>
  <p class="text-gray-600 mb-4">{description}</p>
  
  <div class="flex items-center justify-between mb-6">
    <div>
      <span class="text-sm text-gray-500">عدد الدورات:</span>
      <span class="font-bold mr-1">{courses}</span>
    </div>
    <div>
      <span class="text-sm text-gray-500">المدة الإجمالية:</span>
      <span class="font-bold mr-1">{duration}</span>
    </div>
  </div>
  
  <a href={href} class="block w-full text-center bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">
    استكشف المسار
  </a>
</article>